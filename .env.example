# ===================================
# ABank Marketing Crew Configuration
# ===================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# ===================================
# LLM Provider Configuration
# ===================================

# OpenAI (Primary)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# Model Selection
PRIMARY_LLM_PROVIDER=openai  # openai, anthropic, azure_openai
FALLBACK_LLM_PROVIDER=anthropic

# ===================================
# ABank Systems Integration
# ===================================

# CRM System
ABANK_CRM_API_URL=https://crm.abank.internal/api/v2
ABANK_CRM_API_KEY=your-crm-api-key
ABANK_CRM_TIMEOUT=30

# Data Warehouse
ABANK_DATA_WAREHOUSE_URL=postgresql://user:password@dwh.abank.internal:5432/marketing_dw
ABANK_DATA_WAREHOUSE_POOL_SIZE=10

# Marketing Automation Platform
MARKETING_AUTOMATION_API_URL=https://marketing.abank.internal/api
MARKETING_AUTOMATION_API_KEY=your-marketing-automation-key
MARKETING_AUTOMATION_PLATFORM=salesforce  # salesforce, adobe, hubspot

# Content Management System
CMS_API_URL=https://cms.abank.internal/api
CMS_API_KEY=your-cms-api-key

# ===================================
# Communication Channels
# ===================================

# Email Provider (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=marketing@abank.co.za
SENDGRID_FROM_NAME=ABank Marketing

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+27123456789

# WhatsApp Business
WHATSAPP_BUSINESS_API_KEY=your-whatsapp-api-key
WHATSAPP_BUSINESS_NUMBER=+27123456789

# ===================================
# Social Media Integration
# ===================================

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Facebook/Meta
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Instagram
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-account-id

# ===================================
# Analytics & Monitoring
# ===================================

# Google Analytics
GOOGLE_ANALYTICS_PROPERTY_ID=GA4-XXXXXXXXX
GOOGLE_ANALYTICS_CREDENTIALS_PATH=/path/to/ga-credentials.json

# Google Ads
GOOGLE_ADS_CUSTOMER_ID=123-456-7890
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CREDENTIALS_PATH=/path/to/ads-credentials.json

# Adobe Analytics
ADOBE_ANALYTICS_COMPANY_ID=your-company-id
ADOBE_ANALYTICS_API_KEY=your-adobe-api-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
PROMETHEUS_PORT=9090

# ===================================
# Database Configuration
# ===================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://user:password@localhost:5432/abank_marketing_crew
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (Caching & Task Queue)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_MAX_CONNECTIONS=50

# MongoDB (Document Store for Campaign Data)
MONGODB_URL=mongodb://user:password@localhost:27017/abank_campaigns
MONGODB_DATABASE=abank_campaigns

# ===================================
# Compliance & Security
# ===================================

# Compliance Database
COMPLIANCE_DB_URL=postgresql://user:password@compliance.abank.internal:5432/compliance
COMPLIANCE_API_KEY=your-compliance-api-key

# Regulatory Frameworks
REGULATORY_REGION=ZA  # South Africa
TCF_COMPLIANCE_ENABLED=True
POPIA_COMPLIANCE_ENABLED=True
FAIS_COMPLIANCE_ENABLED=True

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===================================
# Agent Configuration
# ===================================

# Market Intelligence Agent
MARKET_INTEL_SEARCH_DEPTH=comprehensive  # quick, standard, comprehensive
MARKET_INTEL_REFRESH_INTERVAL=3600  # seconds
MARKET_INTEL_SOURCES=news,social,competitor,regulatory

# Customer Segmentation Agent
SEGMENTATION_UPDATE_FREQUENCY=daily  # hourly, daily, weekly
SEGMENTATION_MIN_SEGMENT_SIZE=1000
SEGMENTATION_MAX_SEGMENTS=50

# Content Strategy Agent
CONTENT_LANGUAGES=en,af,zu,xh  # English, Afrikaans, Zulu, Xhosa
CONTENT_TONE=professional  # professional, casual, friendly
BRAND_GUIDELINES_PATH=/config/brand_guidelines.json

# Campaign Execution Agent
CAMPAIGN_AUTO_DEPLOY=False  # Requires approval if False
CAMPAIGN_TEST_PERCENTAGE=10  # A/B test split
CAMPAIGN_DEPLOYMENT_CHANNELS=email,sms,social,display

# Performance Analytics Agent
ANALYTICS_REPORTING_INTERVAL=3600  # seconds
ANALYTICS_KPI_THRESHOLD_ALERT=True
ANALYTICS_DASHBOARD_PORT=8050

# Compliance Agent
COMPLIANCE_AUTO_APPROVE_THRESHOLD=0.95  # 95% confidence for auto-approval
COMPLIANCE_REVIEW_TIMEOUT=7200  # 2 hours before escalation
COMPLIANCE_ALERT_EMAIL=compliance@abank.co.za

# ===================================
# Workflow Configuration
# ===================================

# Product Launch Workflow
PRODUCT_LAUNCH_PHASES=research,planning,creation,approval,deployment,monitoring
PRODUCT_LAUNCH_AUTO_PROGRESS=False

# Real-Time Response Workflow
REAL_TIME_MONITORING_ENABLED=True
REAL_TIME_RESPONSE_THRESHOLD=high  # low, medium, high, critical
REAL_TIME_AUTO_DEPLOY=False

# Personalization Workflow
PERSONALIZATION_ENABLED=True
PERSONALIZATION_LEVEL=individual  # segment, individual
PERSONALIZATION_UPDATE_FREQUENCY=hourly

# ===================================
# Resource Limits
# ===================================

# Budget Controls
DAILY_BUDGET_LIMIT=100000  # ZAR
CAMPAIGN_BUDGET_AUTO_REALLOCATION_MAX_PCT=5
BUDGET_ALERT_THRESHOLD_PCT=80

# API Rate Limits
MAX_REQUESTS_PER_MINUTE=100
MAX_LLM_CALLS_PER_HOUR=1000
MAX_CONCURRENT_WORKFLOWS=5

# Content Generation Limits
MAX_CONTENT_VARIANTS_PER_CAMPAIGN=20
MAX_DAILY_CAMPAIGNS=10
MAX_EMAILS_PER_CUSTOMER_PER_DAY=2

# ===================================
# Feature Flags
# ===================================

FEATURE_AUTONOMOUS_DECISION_MAKING=True
FEATURE_MULTIMODAL_CONTENT=True
FEATURE_VOICE_AGENTS=False
FEATURE_VIDEO_GENERATION=False
FEATURE_PREDICTIVE_TRIGGERS=True
FEATURE_CROSS_SELL_ENGINE=True
FEATURE_BRANCH_INTEGRATION=False

# ===================================
# Localization
# ===================================

DEFAULT_TIMEZONE=Africa/Johannesburg
DEFAULT_CURRENCY=ZAR
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,af,zu,xh,st,tn,ts,ss,nr,nd,ve
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S

# ===================================
# File Storage
# ===================================

# Local Storage
UPLOAD_DIR=/var/abank/uploads
OUTPUT_DIR=/var/abank/outputs
TEMP_DIR=/var/abank/temp
LOG_DIR=/var/abank/logs

# Cloud Storage (Azure Blob)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_CONTAINER=abank-marketing-assets

# ===================================
# Testing & Development
# ===================================

# Test Mode
TEST_MODE=False
TEST_EMAIL_OVERRIDE=test@abank.co.za
TEST_SMS_OVERRIDE=+27123456789
MOCK_EXTERNAL_APIS=False

# Debug Options
DEBUG_AGENT_REASONING=True
DEBUG_TOOL_CALLS=True
DEBUG_WORKFLOW_STEPS=True
VERBOSE_LOGGING=True

# ===================================
# Scheduler Configuration
# ===================================

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Africa/Johannesburg

# Scheduled Tasks
SCHEDULE_MARKET_MONITORING=0 */1 * * *  # Every hour
SCHEDULE_SEGMENTATION_UPDATE=0 2 * * *  # 2 AM daily
SCHEDULE_PERFORMANCE_REPORT=0 8 * * 1  # 8 AM every Monday
SCHEDULE_COMPLIANCE_AUDIT=0 0 * * 0  # Midnight every Sunday
